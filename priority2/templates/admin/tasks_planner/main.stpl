<table class="table table-bordered table-striped table-hover">
	<colgroup align="center">
		<col width='40%' align="left" />
		<col width='1%' />
		<col width='15%' />
		<col width='2%' />
		<col width='2%' />
		<col width='2%' />
		<col width='2%' />
		<col width='5%' />
	</colgroup>
	<thead>
		<th>{t(Title)}</th>
		<th>{t(Next Run)}</th>
		<th>{t(Next Run)}</th>
		<th>{t(Min)}</th>
		<th>{t(Hour)}</th>
		<th>{t(MDay)}</th>
		<th>{t(WDay)}</th>
		<th>{t(Actions)}</th>
	</thead>
	<tbody>
{items}
	</tbody>
</table>
<br />
<div align="center">
	<input type="button" value="{t(Add new task)}" onclick="window.location.href='{add_link}'">
</div>

{if("pages" ne "")}<div align="center">{pages}</div><br />{/if}
<br />
<div align="center"><a href="{view_logs_link}">{t(View task logs)}</a></div>