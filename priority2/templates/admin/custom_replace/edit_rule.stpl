function insert_word(ibTag, ibClsTag, isSingle) {
	p_obj = document.getElementById("tag_replace");
	var isClose = false;
	// It's IE!
	if ((ua_vers >= 4) && is_ie && is_win)	{
		if (p_obj.isTextEdit) {
