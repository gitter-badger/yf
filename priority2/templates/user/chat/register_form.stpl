</script>

<div id="yf_chat">

<div align="center"><h3>{t("chat_registration")}</h3></div>
<table width="400" align="center" cellspacing="5" cellpadding="5" border="0">
<form action="{form_action}" method="post">
	<tr class="bg1">
		<td align="right"><font color="red">* </font><b>{t("login")}</b><br>(2-32 {t("symbols")})</td>
		<td align="left"><input type="text" name="login" value="{login}" size="15" maxlength="32" title="{t(allowed_symbols_are)}:  a-zà-ÿ ._-+=:;~!@#%^&*(){}[]"></td>
	</tr>
	<tr class="bg2">
		<td align="right"><font color="red">* </font><b>{t("password")}</b><br>(4-32 {t("symbols")})</td>
		<td align="left"><input type="password" name="password" size="15" maxlength="32"></td>
	</tr>
	<tr class="bg1">
		<td align="right"><font color="red">* </font><b>{t("pass_again")}</b><br>(4-32 {t("symbols")})</td>
		<td align="left"><input type="password" name="password2" size="15" maxlength="32"></td>
	</tr>
	<tr class="bg2">
		<td align="right"><font color="red">* </font><b>{t("email")}</b></td>
		<td align="left"><input type="text" name="email" value="{email}" size="20" maxlength="128"></td>
	</tr>
	<tr class="bg1">
		<td align="right"><font color="red">* </font><b>{t("gender")}</b></td>
		<td align="left">
			Male :<input type="radio" name="gender" value="m" class="check" checked>
			Female: <input type="radio" name="gender" value="f" class="check">
		</td>
	</tr>
	<tr>
		<td align="left" colspan="2"><font color="red">*</font> - {t("required_fields")}</td>
	</tr>
	<tr>
		<td align="center" colspan="2">
			<input type="hidden" name="step" value="2">
			<input type="button" value="{t("save")}" onClick="form_check(this.form);">
		</td>
	</tr>
</form>
</table>

</div>
</body>
</html>