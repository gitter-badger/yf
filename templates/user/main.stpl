<!DOCTYPE html>
<html>
<head>
	<title>{execute(graphics,show_site_title)}</title>

{execute(common,bs_theme_html)}
{include("main_style_css")}
{execute(graphics,show_metatags)}

</head>
<body>
	<div class="navbar navbar-inverse">
		<div class="navbar-inner">
			<a class="brand" href="{const(WEB_PATH)}">{const(SITE_ADVERT_NAME)}</a>
			<ul class="nav">
{execute(site_nav_bar,_show)}
			</ul>
{execute(site_nav_bar,_show_dropdown_menu)}
			<ul class="nav pull-right">
{execute(common,bs_theme_changer)}
{if("is_logged_in" ne 0)}
				<li>{execute(graphics,show_welcome)}</li>
				<li><a href="./?task=logout" target="_parent">{t(Logout)}</a></li>
{/if}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span2">
{execute(graphics,_show_menu;name=user_main_menu)}
{execute(graphics,_show_block,name=left_area)}
			</div>
			<div class="span10">
{execute(graphics,_show_block;name=center_area)}
			</div>
{{--
			<div class="span2">
{execute(graphics,_show_block,name=right_area)}
			</div>
--}}
		</div>
	</div>
</body>
</html>
