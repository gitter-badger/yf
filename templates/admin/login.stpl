<!DOCTYPE html>
<html>
<head>
	<title>{execute(graphics,show_site_title)}</title>
	<meta charset="utf-8">
{execute(common,bs_theme_html)}
{include("main_style_css")}
{execute(graphics,show_metatags)}
	<style type="text/css">.container-valign-middle { margin:20% 30%; }</style>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="container-fluid container-valign-middle">
		<form class="form-horizontal" method="post" action="./?task=login">
			<div class="control-group">
				<div class="controls">
					<div class="input-prepend">
						<span class="add-on"><i class="icon-user"></i></span>
						<input type="text" id="input_login" maxlength="50" placeholder="{t(Login)}" name="login" value="" class="input-medium">
					</div>
				</div>
			</div>
			<div class="control-group">
				<div class="controls">
					<div class="input-prepend">
						<span class="add-on"><i class="icon-key"></i></span>
						<input type="password" id="input_password" maxlength="50" placeholder="{t(Password)}" name="password" value="" class="input-medium">
					</div>
				</div>
			</div>
			<div class="control-group">
				<div class="controls">
					<button type="submit" class="btn" value="Enter">{t(Enter)}</button>
				</div>
			</div>
		</form>
	</div>
	{include("main_js")}
</body>
</html>
