<tr class="{bg_class}" id="del_row_{id}">
	<td width="1%"><input type="checkbox" name="items[]" value="{id}"></td>
	<td width="90%"><b>{value}</b>{if("location" ne "")}<br /><small>{location}</small>{/if}</td>
	<td nowrap>{locales}&nbsp;</td>
	<td nowrap>
		<a href="{edit_link}"><img height="16" width="16" border="0" src="images/links_edit.gif" alt="{t(Edit)}" /></a>&nbsp;
		<a href="{delete_link}" class="ajax_delete"><img height="16" width="16" border="0" src="images/links_delete.gif" alt="{t(Delete)}" /></a>&nbsp;
	</td>
</tr>