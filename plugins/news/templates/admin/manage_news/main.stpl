{if("items" ne "")}
<table class="table table-bordered table-striped table-hover">
	<thead>
		<th width="35%">{t(Title)}</th>
		<th>{t(Head text)}</th>
		<th width="70px">{t(Add date)}</th>
		<th>{t(Status)}</th>
		<th width="1%">{t(Action)}</th>
	</thead>
{items}
</table>
{/if}

{if("items" eq "")}<div class="alert">{t(No news yet)}</div>{/if}
<br />
<br />

<div align="center">
	<form action="{form_action}" method="post">
		<input type="submit" name="add" value="{t(Add)}" />
	</form>
</div>
